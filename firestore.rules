rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // App config (owner UID) — any signed-in user can read, owner can write
    match /appConfig/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Each user's tasks — owner can read/write, approved viewers can read
    match /users/{userId}/tasks/{taskId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null
        && exists(/databases/$(database)/documents/users/$(userId)/viewers/$(request.auth.uid));
    }

    // Each user's projects — same rules as tasks
    match /users/{userId}/projects/{projectId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null
        && exists(/databases/$(database)/documents/users/$(userId)/viewers/$(request.auth.uid));
    }

    // Viewer registry — owner can manage, viewer can register themselves
    match /users/{userId}/viewers/{viewerId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, write: if request.auth != null && request.auth.uid == viewerId;
    }

    // Block everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
